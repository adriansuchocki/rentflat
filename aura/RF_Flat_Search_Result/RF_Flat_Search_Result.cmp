<aura:component description="RF_Flat_Search_Result" controller="RF_Flat_Controller" implements="forceCommunity:availableForAllPageTypes">
    <aura:attribute name="title" type="String"/>
    <aura:attribute name="page" type="String"/>
    <aura:attribute name="resultList" type="Object[]"/>
    <aura:attribute name="layout" type="Boolean" default="false"/>
    <aura:attribute name="previousNumberOfRecords" type="Boolean" default="false"/>
    <aura:registerEvent name="showSpinner" type="c:RF_Flat_Spinner_Show_Event"/>
    <aura:registerEvent name="hideSpinner" type="c:RF_Flat_Spinner_Hide_Event"/>
    <aura:handler name="init" value="{! this }" action="{! c.init }"/>
    <aura:handler event="c:RF_Flat_Search_Show_More_Results_Event" action="{! c.init }"/>
    <aura:method name="search" action="{! c.handleSearch }" access="PUBLIC">
        <aura:attribute name="title" type="String" />
    </aura:method>
    <c:RF_DivisionSearch_Spinner aura:id="spinnerResult"/>

    <div class="c-container">
        <lightning:layout horizontalAlign="center">
            <lightning:layoutItem size="11">
                <aura:if isTrue="{! v.layout }">
                    <lightning:buttonIcon iconName="utility:tile_card_list" size="large" variant="bare" disabled="true" alternativeText="Card" class="slds-input__icon slds-float_right" />
                    <lightning:buttonIcon iconName="utility:list" size="large" variant="bare" onclick="{! c.showCard }" alternativeText="List" class="slds-input__icon slds-float_right" />
                    <aura:set attribute="else">
                        <lightning:buttonIcon iconName="utility:tile_card_list" size="large" variant="bare" onclick="{! c.showList }" alternativeText="Card" class="slds-input__icon slds-float_right" />
                        <lightning:buttonIcon iconName="utility:list" size="large" variant="bare" disabled="true" alternativeText="List" class="slds-input__icon slds-float_right" />
                    </aura:set>
                </aura:if>
            </lightning:layoutItem>
        </lightning:layout>
        <c:RF_Flat_Search_Result_Item flats="{! v.resultList }" layout="{! v.layout }"/>
        <aura:if isTrue="{! and(v.resultList.length != v.previousNumberOfRecords,  v.resultList.length%20 == 0) }">
            <center>
                <lightning:button label="{! $Label.c.BTN_SHOW_MORE_RESULT }" iconName="utility:jump_to_bottom" iconPosition="left" onclick="{! c.handleShowMoreResults }" />
            </center>
        </aura:if>
    </div>
    <c:RF_Toast aura:id="RFToast"/>
</aura:component>