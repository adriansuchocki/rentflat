<aura:component description="RF_Flat_Search_Result_Item">
    <aura:attribute name="flat" type="Object" />

    <div class="c-container">
        <lightning:layout horizontalAlign="center">
            <lightning:layoutItem size="2" padding="around-small">
                <aura:if isTrue="{! empty(v.flat.link) }" >
                    <img src="{! $Resource.NoPhoto }"/>
                    <aura:set attribute="else">
                        <img  src="{! v.flat.link }"/>
                    </aura:set>
                </aura:if>
            </lightning:layoutItem>
            <lightning:layoutItem size="6" padding="around-large">
                <p class="slds-text-heading--label" ><h3 class="slds-text-heading_medium">{! v.flat.title }</h3></p>
            </lightning:layoutItem>
            <lightning:layoutItem >
            </lightning:layoutItem>
        </lightning:layout>
    </div>
</aura:component>
