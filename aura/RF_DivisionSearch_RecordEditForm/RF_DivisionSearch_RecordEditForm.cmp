<aura:component implements="flexipage:availableForAllPageTypes" >
    <aura:handler event="c:RF_DivisionSearch_RecordEditForm_Event" action="{! c.handleShowModal }"/>
    <aura:attribute name="disabled" type="Boolean" default="false" />
    <aura:attribute name="saved" type="Boolean" default="true" />
    <aura:attribute name="showSpinner" type="Boolean" default="false" />
    <aura:attribute name="showModal" type="boolean" default="false" />
    <aura:attribute name="idAccount" type="Id" />
    <aura:if isTrue="{! v.showModal }">
        <aura:if isTrue="{! v.showSpinner }">
            <lightning:spinner />
        </aura:if>
        <aura:if isTrue="{! !v.saved }">
            <div class="slds-m-around_xx-large">
                <section role="dialog" tabindex="-1" aria-labelledby="modal-heading-01" aria-modal="true" aria-describedby="modal-content-id-1" class="slds-modal slds-fade-in-open">
                    <div class="slds-modal__container">
                        <header class="slds-modal__header">
                            <lightning:buttonIcon iconName="utility:close"
                                                  onclick="{! c.handleClose }"
                                                  alternativeText="close"
                                                  variant="bare-inverse"
                                                  class="slds-modal__close"/>
                            <aura:if isTrue="{! empty(v.idAccount) }">
                                <h2 id="modal-heading-01" class="slds-text-heading_medium slds-hyphenate">{! $Label.c.LABEL_CREATE_ACCOUNT }</h2>
                                <aura:set attribute="else">
                                    <h2 id="modal-heading-01" class="slds-text-heading_medium slds-hyphenate">{! $Label.c.LABEL_EDIT_ACCOUNT }</h2>
                                </aura:set>
                            </aura:if>
                        </header>
                        <lightning:recordEditForm onload="{!c.handleLoad}" onsubmit="{!c.handleSubmit}" onsuccess="{!c.handleSuccess}" recordId="{! v.idAccount }" objectApiName="Account">
                            <div class="slds-modal__content slds-p-around_medium" style="max-height: 500px;" id="modal-content-id-1">
                                <lightning:messages />
                                <lightning:layout multipleRows="true">
                                    <lightning:layoutItem padding="around-small" size="6">
                                        <lightning:inputField fieldName="Name" />
                                        <lightning:inputField fieldName="ParentId" />
                                        <lightning:inputField fieldName="AccountNumber" />
                                        <lightning:inputField fieldName="Site" />
                                        <lightning:inputField fieldName="Type" />
                                        <lightning:inputField fieldName="Industry" />
                                        <lightning:inputField fieldName="AnnualRevenue" />
                                        <lightning:inputField fieldName="BillingAddress" />
                                        <lightning:inputField fieldName="CustomerPriority__c" />
                                        <lightning:inputField fieldName="SLAExpirationDate__c" />
                                    </lightning:layoutItem>
                                    <lightning:layoutItem padding="around-small" size="6">
                                        <lightning:inputField fieldName="Phone" />
                                        <lightning:inputField fieldName="Fax" />
                                        <lightning:inputField fieldName="Website" />
                                        <lightning:inputField fieldName="TickerSymbol" />
                                        <lightning:inputField fieldName="Ownership" />
                                        <lightning:inputField fieldName="Employees" />
                                        <lightning:inputField fieldName="Sic" />
                                        <lightning:inputField fieldName="ShippingAddress" />
                                        <lightning:inputField fieldName="SLA__c" />
                                    </lightning:layoutItem>
                                </lightning:layout>
                            </div>
                            <footer class="slds-modal__footer">
                                <lightning:button variant="neutral" label="{! $Label.c.BTN_CANCEL }" title="{! $Label.c.BTN_CANCEL }" onclick="{! c.handleClose }"/>
                                <lightning:button variant="brand" disabled="{!v.disabled}" label="{! $Label.c.BTN_SAVE }" title="{! $Label.c.BTN_SAVE }" type="submit"/>
                            </footer>
                        </lightning:recordEditForm>
                    </div>
                </section>
                <div class="slds-backdrop slds-backdrop_open"></div>
            </div>
        </aura:if>
    </aura:if>
</aura:component>